HOST = $(shell hostname)

CC = g++
CC = CC -mkl -no-ipo
CC = mpicxx
CC = mpiicpc 

OPTS = -g
OPTS = -O3
VECS = -qopt-report-phase=vec -qopt-report=2
DEFS = -DUSE_MM_MALLOC -DSTANDALONE -DOPENQU_HAVE_MPI -DMKL_ILP64

CFLAGS = ${OPTS} ${DEFS} \
         -Wall -std=c++11 -qopenmp #-restrict \
# -fasm-blocks

CFLAGS += ${OPTFLAGS}  

INC = -I./ -I../


########### Modified for the ccefw-desktop.jf.intel.com environment ############
